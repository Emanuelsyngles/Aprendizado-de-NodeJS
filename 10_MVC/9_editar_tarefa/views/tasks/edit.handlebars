<h1>Editando a tarefa: {{this.title}}</h1>
<form action="/tasks/add" method="POST">
    <input type="hidden" name="id" value="{{this.id}}">
    <div class="form-control">
        <label for="title">Título</label>
        <input type="text" name="title" placeholder="O que você vai fazer?" value="{{this.title}}">
    </div>
    <div class="form-control">
        <label for="description">Descrição:</label>
        <textarea name="description" cols="30" rows="10" placeholder="Descreva a terefa...">{{this.description}}</textarea>
    </div>
    <input type="submit" value="Editar">
</form>